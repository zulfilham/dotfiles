#!/data/com.termux/files/usr/bin/bash

alias ssh-computer="ssh $COMPUTER_ADDRESS" \
   sftp-computer="sftp $COMPUTER_ADDRESS" \
   ssh-setup="ssh-copy-id $COMPUTER_ADDRESS" \
   apply="source ~/.bash_profile" \
   trigger-termux-session="am start -n com.termux/.filepicker.TermuxFileReceiverActivity -d file:///dev/null" \
   grep="grep --color=always" \
   diff="diff --color=always" \
   ls="ls --almost-all --color=auto" \
   grep="grep --color=auto" \
   diff="diff --color=auto" \
   rm="rm --interactive" \
   mv="mv --interactive" \
   cp="cp --interactive" \
   rename="rename --interactive" \
   imv="imv --interactive" \
   icp="icp --interactive" \
   .aliases="vim ~/.aliases" \
   .auto_completion="vim ~/.auto_completion" \
   .bashrc="vim ~/.bashrc" \
   .bash_profile="vim ~/.bash_profile" \
   .bash_logout="vim ~/.bash_logout" \
   .bash_prompt="vim ~/.bash_prompt" \
   .functions="vim ~/.functions" \
   .git-credentials="vim ~/.git-credentials" \
   .gitattributes="vim ~/.gitattributes" \
   .gitconfig="vim ~/.gitconfig" \
   .inputrc="vim ~/.inputrc" \
   .export="vim ~/.export" \
   .nanorc="nano ~/.nanorc" \
   .vimrc="vim ~/.vimrc" \
   nanorc="cd $NANORC; ls" \
   vimrc="cd $VIMRC; ls" \
   etc="cd $ETC; ls" \
   bin="cd $BIN; ls" \
   share="cd $SHARE; ls" \
   internal="cd $INTERNAL; ls";

if [ -v EXTERNAL ]; then
   alias external="cd $EXTERNAL; ls";

   if [ -v EXTERNAL_STORAGE ]; then
      alias external-storage="cd $EXTERNAL_STORAGE; ls";
   fi;
fi;

nanorc_filenames=($(find $SHARE/nano -maxdepth 1 -type f -name \*.nanorc));
nanorc_basenames=($(basename --multiple ${nanorc_filenames[@]}));
nanorc=();

for i in ${!nanorc_basenames[@]}; do
   nanorc+=(${nanorc_basenames[i]}=nano\ ${nanorc_filenames[i]});
done;

alias "${nanorc[@]}";
unset nanorc nanorc_filenames nanorc_basenames i;
