#!/data/com.termux/files/usr/bin/bash

# Functional aliases
   alias apply="source ~/.bash_profile";
   # Open new session in hacky way.
   alias trigger-termux-session="am start -n com.termux/com.termux.filepicker.TermuxFileReceiverActivity -d file:///dev/null";
   alias ssh-computer="ssh -p 22 $computer_address";     # see 'home/.path'
   alias sftp-computer="sftp -P 22 $computer_address";   # see 'home/.path'
   alias ls="$PREFIX/bin/ls -A --color=auto";
   alias quit="exit 0; kill -9 $$";

# Shortcuts
   # general
   alias rm="rm -i";
   alias mv="mv -i";
   alias cp="cp -i";
   alias cls="clear; ls";
   alias clh="clear; cd; ls";
   alias cphp="clear; php";
   alias cbash="clear; bash";
   alias cpython="clear; python";
   alias cpython2="clear; python2";
   alias ccat="clear; cat";
   alias cfind="clear; find";
   alias cgit="clear; git";
   alias cgrep="clear; grep";
   alias chead="clear; head";
   alias cman="clear; man";
   alias csed="clear; sed";
   alias ctail="clear; tail";
   alias ctree="clear; tree";
   alias cvtshowkeys="clear; vtshowkeys";
   alias .aliases="nano ~/.aliases";
   alias .auto_completion="nano ~/.auto_completion";
   alias .bashrc="nano ~/.bashrc";
   alias .bash_profile="nano ~/.bash_profile";
   alias .bash_prompt="nano ~/.bash_prompt";
   alias .functions="nano ~/.functions";
   alias .gitattributes="nano ~/.gitattributes";
   alias .gitconfig="nano ~/.gitconfig";
   alias .inputrc="nano ~/.inputrc";
   alias .nanorc="nano ~/.nanorc";
   alias .path="nano ~/.path";

   # nano syntax highlighting
      alias bash.nanorc="nano $PREFIX/share/nano/bash.nanorc";
      alias c.nanorc="nano $PREFIX/share/nano/c.nanorc";
      alias php.nanorc="nano $PREFIX/share/nano/php.nanorc";
      alias python.nanorc="nano $PREFIX/share/nano/python.nanorc";
      alias txt.nanorc="nano $PREFIX/share/nano/txt.nanorc";

   # path
      alias internal="cd $internal; ls";

      if [ -v external ]; then
         alias external="cd $external; ls";
         alias external-storage="cd $external_storage; ls";
      fi;

      alias nanorc="cd $PREFIX/share/nano; ls";

