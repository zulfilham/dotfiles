# Personal Git configuration
[user]
   name = zulfilham
   email = code.zulfilham@gmail.com

[core]
   editor = nano
   autocrlf = false
   eol = lf
   pager = less -+$LESS --RAW-CONTROL-CHARS

[alias]
   add-all = add --all
   add-modified = add --update
   add-untracked = !git ls-files -z --others --exclude-standard | git add --pathspec-from-file=- --pathspec-file-nul
   log = log --date=local
   log-all = log --all --date=local
   log-oneline = log --oneline --date=local --graph
   log-oneline-all = log --all --oneline --date=local --graph
   log-graph = log --graph --date=local
   log-graph-all = log --all --graph --date=local
   log-stat = log --graph --date=local --stat=81
   log-stat-all = log --graph --all --date=local --stat=81
   log-verbose = log --graph --date=local --stat=81 --patch
   log-verbose-all = log --all --graph --date=local --stat=81 --patch
   restore-all = !git restore --staged --worktree -- \"$(git rev-parse --show-toplevel)\"

[commit]
   gpgSign = true
   template = ~/.config/git/COMMIT_TEMPLATE

[mergetool]
   keepBackup = false

[tag]
   gpgSign = true

[push]
   followTags = true

[receive]
   denyCurrentBranch = warn
   denyDeleteCurrent = warn

# General Git configuration
[pull]
   rebase = false
